<Window
    x:Class="WpfApp1.AlasimSinirView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AlasimSinirView"
    Width="1058.2"
    Height="601.4"
    FontSize="14"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:AlasimSinirVM />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button
                Width="185"
                Height="31"
                Margin="8"
                HorizontalAlignment="Left"
                Command="{Binding KaydetCommand}"
                Content="Kaydet"
                FontWeight="Bold" />


        </StackPanel>


        <dxg:GridControl
            Grid.Row="1"
            AutoGenerateColumns="None"
            EnableSmartColumnsGeneration="True"
            ItemsSource="{Binding AlasimSinirlari, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <dxg:GridControl.Resources>

                <Style
                    x:Key="cell1"
                    BasedOn="{StaticResource {dxgt:GridRowThemeKey ResourceKey=LightweightCellStyle}}"
                    TargetType="{x:Type dxg:LightweightCellEditor}">
                    <Setter Property="Background" Value="WhiteSmoke" />

                </Style>

                <Style x:Key="c1" TargetType="{x:Type dxg:GridColumnHeader}">
                    <Setter Property="FontWeight" Value="DemiBold"/>
                    <Setter Property="Background" Value="White" />
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="Height" Value="40" />
                </Style>


                <Style x:Key="c2" TargetType="{x:Type dxg:GridColumnHeader}">
                    <Setter Property="FontWeight" Value="DemiBold"/>
                    <Setter Property="Background" Value="WhiteSmoke" />
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="Height" Value="40" />
                </Style>



            </dxg:GridControl.Resources>

            <dxg:GridControl.View>
                <dxg:TableView
                    Name="view1"
                    AutoWidth="True"
                    RowMinHeight="35"
                    ShowAutoFilterRow="True"
                    ShowGroupPanel="False"
                    ShowTotalSummary="True" />
            </dxg:GridControl.View>

            <dxg:GridColumn
                Width="120"
                FieldName="Alasim"
                Header="Alaşım"
                IsSmart="True">

                <dxg:GridColumn.CellTemplate>
                    <DataTemplate>
                        <dxe:TextEdit Background="WhiteSmoke"
                            Name="PART_Editor"
                            HorizontalContentAlignment="Center"
                            FontWeight="DemiBold" />
                    </DataTemplate>
                </dxg:GridColumn.CellTemplate>

                <dxg:GridColumn.HeaderStyle>
                    <Style TargetType="dxg:GridColumnHeader">
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="FontSize" Value="16" />
                    </Style>
                </dxg:GridColumn.HeaderStyle>
            </dxg:GridColumn>
            <dxg:GridColumn
                Width="80"
                FieldName="SiMin"
                Header="Si min"
                HeaderStyle="{StaticResource c1}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                FieldName="SiMax"
                Header="max"
                HeaderStyle="{StaticResource c1}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                CellStyle="{StaticResource cell1}"
                FieldName="FeMin"
                Header="Fe min"
                HeaderStyle="{StaticResource c2}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                CellStyle="{StaticResource cell1}"
                FieldName="FeMax"
                Header="max"
                HeaderStyle="{StaticResource c2}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                FieldName="CuMin"
                Header="Cu min"
                HeaderStyle="{StaticResource c1}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                FieldName="CuMax"
                Header="max"
                HeaderStyle="{StaticResource c1}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                CellStyle="{StaticResource cell1}"
                FieldName="MnMin"
                Header="Mn min"
                HeaderStyle="{StaticResource c2}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                CellStyle="{StaticResource cell1}"
                FieldName="MnMax"
                Header="max"
                HeaderStyle="{StaticResource c2}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                FieldName="MgMin"
                Header="Mg min"
                HeaderStyle="{StaticResource c1}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                FieldName="MgMax"
                Header="max"
                HeaderStyle="{StaticResource c1}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                CellStyle="{StaticResource cell1}"
                FieldName="TiMin"
                Header="Ti min"
                HeaderStyle="{StaticResource c2}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                CellStyle="{StaticResource cell1}"
                FieldName="TiMax"
                Header="max"
                HeaderStyle="{StaticResource c2}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                FieldName="ZnMin"
                Header="Zn min"
                HeaderStyle="{StaticResource c1}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                FieldName="ZnMax"
                Header="max"
                HeaderStyle="{StaticResource c1}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                CellStyle="{StaticResource cell1}"
                FieldName="AlMin"
                Header="Al min"
                HeaderStyle="{StaticResource c2}"
                IsSmart="True" />
            <dxg:GridColumn
                Width="80"
                CellStyle="{StaticResource cell1}"
                FieldName="AlMax"
                Header="max"
                HeaderStyle="{StaticResource c2}"
                IsSmart="True" />




        </dxg:GridControl>



    </Grid>
</Window>
